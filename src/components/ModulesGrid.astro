      <p class="text-lg text-slate-400 max-w-2xl">
        Compose your IAM stack with focused modules aligned to enterprise security operations.
      </p>
    </div>

    <!-- Modules Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {allModules.map((module, i) => (
        <div class={`group relative bg-slate-900/50 border ${module.borderColor} rounded-xl p-6 hover:bg-slate-900/70 transition-all duration-300 reveal`} style={`transition-delay: ${i * 0.08}s`}>
          <!-- Icon + Name -->
          <div class="flex items-start gap-4 mb-4">
            <div class={`w-10 h-10 rounded-lg ${module.bgColor} border ${module.borderColor} flex items-center justify-center flex-shrink-0 text-xl`}>
              {module.icon}
            </div>
            <div>
              <h3 class={`text-lg font-bold ${module.color} mb-0.5`}>{module.name}</h3>
            </div>
          </div>

          <!-- Description -->
          <p class="text-slate-400 text-sm leading-relaxed mb-4">
            {module.description}
          </p>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {module.tags.map((tag) => (
              <span class="text-xs font-mono text-slate-500 bg-slate-800/60 border border-slate-700/50 px-2 py-0.5 rounded">
                {tag}
