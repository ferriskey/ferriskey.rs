<section id="modules" class="py-24 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Section Label -->
    <div class="mb-12 reveal">
      <p class="text-xs text-ferris-400 font-mono uppercase tracking-widest mb-3">Modular Architecture</p>
      <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
        Modular by Design
