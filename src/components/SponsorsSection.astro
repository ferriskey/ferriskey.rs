---
import type { Sponsor } from '../data/sponsors';

interface Props {
  sponsors: Sponsor[];
}

const { sponsors } = Astro.props;

const platinumSponsors = sponsors.filter((s) => s.tier === 'platinum');
const goldSponsors = sponsors.filter((s) => s.tier === 'gold');
const supporters = sponsors.filter((s) => s.tier === 'supporter');

const testimonials = [
  {
    quote: "FerrisKey gave us tenant-isolated IAM without the XML nightmare. We shipped in a week.",
    author: "Platform Lead",
    company: "ScaleStack",
    initials: "PL",
    color: "bg-ferris-500",
  },
  {
    quote: "Policy rollout and audit visibility improved in our first sprint. Night and day vs Keycloak.",
    author: "Security Engineer",
    company: "Fintech Corp",
    initials: "SE",
    color: "bg-ocean-500",
  },
  {
    quote: "The Kubernetes-native model matched our platform architecture perfectly.",
    author: "Head of Platform",
    company: "Contoso Cloud",
    initials: "HP",
    color: "bg-purple-500",
  },
];
---

<section id="sponsors" class="py-24 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Section header -->
    <div class="mb-16 reveal">
      <p class="text-xs text-ferris-400 font-mono uppercase tracking-widest mb-3">Supporting Partners</p>
      <h2 class="text-4xl sm:text-5xl font-bold text-white mb-2">Supported By</h2>
    </div>

    <!-- ── Platinum ── -->
    <div class="mb-14 reveal reveal-delay-1">
      <p class="text-[11px] text-slate-600 uppercase tracking-widest font-mono mb-6">Platinum Sponsors</p>
      <div class="flex flex-wrap gap-5 items-stretch">
        {platinumSponsors.map((sponsor) => (
          <a
            href={sponsor.website}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col gap-3"
            title={sponsor.name}
          >
            <!-- Logo sur fond blanc, grande taille -->
            <div class="w-52 h-24 bg-white rounded-xl flex items-center justify-center px-6 shadow-sm group-hover:shadow-md transition-shadow duration-200">
              <img
                src={sponsor.logo}
                alt={sponsor.name}
                class="w-full h-full object-contain"
                loading="lazy"
              />
            </div>
            <div>
              <p class="text-sm text-white font-medium">{sponsor.name}</p>
              {sponsor.description && (
                <p class="text-xs text-slate-500">{sponsor.description}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-slate-800/80 mb-14"></div>

    <!-- ── Gold ── -->
    {goldSponsors.length > 0 && (
      <div class="mb-14">
        <p class="text-[11px] text-slate-600 uppercase tracking-widest font-mono mb-6">Gold Sponsors</p>
        <div class="flex flex-wrap gap-5 items-stretch">
          {goldSponsors.map((sponsor) => (
            <a
              href={sponsor.website}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col gap-3"
              title={sponsor.name}
            >
              <div class="w-40 h-16 bg-white rounded-lg flex items-center justify-center px-4 opacity-90 group-hover:opacity-100 shadow-sm group-hover:shadow-md transition-all duration-200">
                <img
                  src={sponsor.logo}
                  alt={sponsor.name}
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
              <div>
                <p class="text-sm text-slate-300 font-medium">{sponsor.name}</p>
                {sponsor.description && (
                  <p class="text-xs text-slate-600">{sponsor.description}</p>
                )}
              </div>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- Divider -->
    <div class="h-px bg-slate-800/80 mb-14"></div>

    <!-- ── Supporters ── -->
    {supporters.length > 0 && (
      <div class="mb-16">
        <p class="text-[11px] text-slate-600 uppercase tracking-widest font-mono mb-6">Supporters</p>
        <div class="flex flex-wrap gap-5 items-stretch">
          {supporters.map((sponsor) => (
            <a
              href={sponsor.website}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col gap-3"
              title={sponsor.name}
            >
              <div class="w-28 h-12 bg-white rounded-lg flex items-center justify-center px-3 opacity-70 group-hover:opacity-95 shadow-sm group-hover:shadow-md transition-all duration-200">
                <img
                  src={sponsor.logo}
                  alt={sponsor.name}
                  class="w-full h-full object-contain"
                  loading="lazy"
                />
              </div>
              <p class="text-xs text-slate-600 group-hover:text-slate-400 transition-colors">{sponsor.name}</p>
            </a>
          ))}
        </div>
      </div>
    )}

    <!-- ── Become a sponsor ── -->
    <div class="border-t border-slate-800/60 pt-10 mb-20 flex flex-col sm:flex-row sm:items-center justify-between gap-6 reveal">
      <div>
        <p class="text-white font-semibold mb-1">Want to support FerrisKey?</p>
        <p class="text-slate-500 text-sm">Logo placement, README visibility, Discord role and early feature access.</p>
      </div>
      <div class="flex gap-3 flex-shrink-0">
        <a
          href="https://github.com/sponsors/ferriskey"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-ferris-500 hover:bg-ferris-600 text-white font-semibold px-5 py-2.5 rounded-lg transition-colors duration-200 text-sm"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
          Become a Sponsor
        </a>
        <a
          href="mailto:pro.nathaelbonnal@gmail.com"
          class="inline-flex items-center gap-2 border border-slate-700 hover:border-slate-500 text-slate-400 hover:text-white font-medium px-5 py-2.5 rounded-lg transition-colors duration-200 text-sm"
        >
          Contact us
        </a>
      </div>
    </div>

    <!-- ── Trusted By ── -->
    <div>
      <p class="text-xs text-ferris-400 font-mono uppercase tracking-widest mb-3 reveal">Adopted by teams</p>
      <h2 class="text-4xl sm:text-5xl font-bold text-white mb-12 reveal reveal-delay-1">Trusted By</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {testimonials.map((t, i) => (
          <div class="relative pl-5 border-l-2 border-slate-700 hover:border-ferris-500 transition-colors duration-300 py-1 reveal" style={`transition-delay: ${i * 0.1}s`}>
            <p class="text-slate-300 text-sm leading-relaxed mb-5">
              "{t.quote}"
            </p>
            <div class="flex items-center gap-2.5">
              <div class={`w-7 h-7 rounded-full ${t.color} flex items-center justify-center flex-shrink-0`}>
                <span class="text-white text-[10px] font-bold">{t.initials}</span>
              </div>
              <div>
                <p class="text-white text-xs font-semibold">{t.author}</p>
                <p class="text-slate-500 text-xs">{t.company}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>
