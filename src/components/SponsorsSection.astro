---
import type { Sponsor } from '../data/sponsors';

interface Props {
  sponsors: Sponsor[];
}

const { sponsors } = Astro.props;

const platinumSponsors = sponsors.filter((s) => s.tier === 'platinum');
const goldSponsors = sponsors.filter((s) => s.tier === 'gold');
const supporters = sponsors.filter((s) => s.tier === 'supporter');

const tierConfig = {
  platinum: {
    title: 'Platinum Sponsors',
    description: 'Our platinum partners who actively support the FerrisKey project',
    badge: 'ü•á',
    badgeColor: 'from-amber-400 to-amber-500',
  },
  gold: {
    title: 'Gold Sponsors',
    description: 'Our gold partners who contribute to the FerrisKey project',
    badge: 'üíé',
    badgeColor: 'from-slate-300 to-slate-400',
  },
  supporter: {
    title: 'Supporters',
    description: 'Our valued supporters who believe in the FerrisKey mission',
    badge: '‚ù§Ô∏è',
    badgeColor: 'from-rose-400 to-rose-500',
  },
};
---

<section id="sponsors" class="section-py relative">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h2 class="mb-6">
        <span class="text-white">Our </span>
        <span class="text-gradient">Sponsors</span>
      </h2>
      <p class="text-xl text-slate-400 mb-8 leading-relaxed">
        Ferriskey was supported by companies and individuals who believe in the importance of
        an open-source, high-performance, modern IAM.
      </p>
      <a
        href="https://github.com/sponsors/ferriskey"
        target="_blank"
        rel="noopener noreferrer"
        class="group relative overflow-hidden bg-gradient-to-r from-ferris-500 to-ferris-600 text-white font-semibold px-6 py-3 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 inline-flex items-center gap-2"
      >
        <div class="absolute inset-0 bg-gradient-to-r from-ferris-400 to-ferris-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <svg class="relative z-10 w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
        </svg>
        <span class="relative z-10">Become a Sponsor</span>
      </a>
    </div>

    <!-- Sponsor Tiers -->
    <div class="max-w-6xl mx-auto">
      <!-- Platinum & Gold Sponsors -->
      {(platinumSponsors.length > 0 || goldSponsors.length > 0) && (
        <div class="mb-20">


          <div class="flex flex-wrap items-center justify-center gap-6">
            {/* Platinum Sponsors en premier */}
            {platinumSponsors.map((sponsor) => (
              <a
                href={sponsor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="sponsor-card-platinum group relative flex flex-col items-center justify-center p-6 bg-slate-900/50 backdrop-blur-sm rounded-xl hover:bg-slate-900/70 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl w-64 h-52"
                title={sponsor.name}
              >
                {/* Bordure d√©grad√©e anim√©e Platinum - Or brillant */}
                <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-amber-300 via-yellow-400 to-amber-500 opacity-80 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute inset-[3px] rounded-xl bg-slate-900/95 z-0"></div>
                {/* Effet de brillance suppl√©mentaire */}
                <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-amber-200/20 via-transparent to-amber-500/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                {/* Logo avec fond blanc adaptatif */}
                <div class="relative z-10 mb-3 w-full h-24 flex items-center justify-center">
                  <div class="absolute inset-0 bg-white rounded-lg opacity-95"></div>
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="relative z-10 max-h-16 max-w-[80%] object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>

                {/* Sponsor Info */}
                <div class="relative z-10 text-center w-full min-h-[48px] flex flex-col justify-center">
                  <h4 class="text-base font-bold text-white mb-1 group-hover:text-ferris-400 transition-colors">
                    {sponsor.name}
                  </h4>
                  {sponsor.description && (
                    <p class="text-xs text-slate-400">{sponsor.description}</p>
                  )}
                </div>

                {/* Platinum Badge */}
                <div class="absolute z-20 -top-2 -right-2 w-9 h-9 bg-gradient-to-br from-amber-400 to-amber-600 rounded-full flex items-center justify-center text-xl shadow-xl border-2 border-slate-950">
                  ü•á
                </div>

                {/* Glow effect premium */}
                <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-amber-500/0 to-yellow-500/0 group-hover:from-amber-500/10 group-hover:to-yellow-500/10 transition-all duration-300"></div>
                {/* Shadow premium */}
                <div class="absolute -inset-1 rounded-xl bg-gradient-to-r from-amber-400/0 to-amber-600/0 group-hover:from-amber-400/30 group-hover:to-amber-600/30 blur-lg transition-all duration-300 -z-10"></div>
              </a>
            ))}

            {/* Gold Sponsors ensuite */}
            {goldSponsors.map((sponsor) => (
              <a
                href={sponsor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="sponsor-card-gold group relative flex flex-col items-center justify-center p-6 bg-slate-900/50 backdrop-blur-sm rounded-xl hover:bg-slate-900/70 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl w-64 h-52"
                title={sponsor.name}
              >
                {/* Bordure d√©grad√©e anim√©e Gold - Argent/Diamant */}
                <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-slate-300 via-blue-200 to-purple-300 opacity-60 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="absolute inset-[2px] rounded-xl bg-slate-900/90 z-0"></div>
                {/* Logo avec fond blanc adaptatif */}
                <div class="relative z-10 mb-3 w-full h-24 flex items-center justify-center">
                  <div class="absolute inset-0 bg-white rounded-lg opacity-95"></div>
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="relative z-10 max-h-16 max-w-[80%] object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>

                {/* Sponsor Info */}
                <div class="relative z-10 text-center w-full min-h-[48px] flex flex-col justify-center">
                  <h4 class="text-base font-bold text-white group-hover:text-ferris-400 transition-colors">
                    {sponsor.name}
                  </h4>
                  {sponsor.description && (
                    <p class="text-xs text-slate-400 mt-1">{sponsor.description}</p>
                  )}
                </div>

                {/* Gold Badge */}
                <div class="absolute z-20 -top-2 -right-2 w-8 h-8 bg-gradient-to-br from-slate-300 to-slate-400 rounded-full flex items-center justify-center text-lg shadow-lg border-2 border-slate-950">
                  üíé
                </div>

                {/* Glow effect */}
                <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-ferris-500/0 to-purple-500/0 group-hover:from-ferris-500/5 group-hover:to-purple-500/5 transition-colors duration-300"></div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Supporters -->
      {supporters.length > 0 && (
        <div class="mb-16">
          <div class="flex flex-wrap items-center justify-center gap-4">
            {supporters.map((sponsor) => (
              <a
                href={sponsor.website}
                target="_blank"
                rel="noopener noreferrer"
                class="sponsor-card group relative flex flex-col items-center justify-center bg-slate-900/50 backdrop-blur-sm border border-slate-800/50 rounded-lg hover:border-ferris-500/50 hover:bg-slate-900/70 transition-all duration-300  w-40"
                title={sponsor.name}
              >
                {/* Logo avec fond blanc adaptatif */}
                <div class="relative w-full h-16 flex items-center justify-center">
                  <div class="absolute inset-0 bg-white rounded opacity-95"></div>
                  <img
                    src={sponsor.logo}
                    alt={sponsor.name}
                    class="relative z-10 max-h-12 max-w-[75%] object-contain transition-transform duration-300 group-hover:scale-110"
                    loading="lazy"
                  />
                </div>

                {/* Sponsor Info */}


                {/* Glow effect */}
                <div class="absolute inset-0 rounded-lg bg-ferris-500/0 group-hover:bg-ferris-500/5 transition-colors duration-300"></div>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>



    <!-- Stats -->
    <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
      <div class="text-center card p-6">
        <div class="text-4xl font-bold text-gradient mb-2">
          {sponsors.length}
        </div>
        <p class="text-sm text-slate-400">Active sponsors</p>
      </div>
      <div class="text-center card p-6">
        <div class="text-4xl font-bold text-gradient mb-2">
          {platinumSponsors.length}
        </div>
        <p class="text-sm text-slate-400">Platinum</p>
      </div>
      <div class="text-center card p-6">
        <div class="text-4xl font-bold text-gradient mb-2">100%</div>
        <p class="text-sm text-slate-400">Open Source</p>
      </div>
      <div class="text-center card p-6">
        <div class="text-4xl font-bold text-gradient mb-2">‚àû</div>
        <p class="text-sm text-slate-400">Gratitude</p>
      </div>
    </div>
  </div>
</section>

<style>
  .sponsor-card,
  .sponsor-card-platinum,
  .sponsor-card-gold {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animation de pulsation pour les bordures Platinum - Plus intense */
  .sponsor-card-platinum > div:first-child {
    animation: platinum-pulse 2.5s ease-in-out infinite;
  }

  @keyframes platinum-pulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.01);
    }
  }

  /* Animation de pulsation pour les bordures Gold */
  .sponsor-card-gold > div:first-child {
    animation: gold-pulse 3s ease-in-out infinite;
  }

  @keyframes gold-pulse {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 0.9;
    }
  }
</style>
