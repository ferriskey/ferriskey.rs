---
import { BookText, Github } from '@lucide/astro';
---


<section class="relative px-4 pt-20 pb-[12rem] sm:px-6 sm:pt-28 md:pb-[10.9rem] bg-linear-to-t from-orange-100/20 dark:from-blue-900/5">
    <div class="absolute z-10 size-2 rotate-45 rounded-[1px] border border-orange-200 dark:border-blue-300/25 bg-white dark:bg-black bottom-[-4.5px] left-[-4.5px]"></div>
    <div class="absolute z-10 size-2 rotate-45 rounded-[1px] border border-orange-200 dark:border-blue-300/25 bg-white dark:bg-black right-[-4.5px] bottom-[-4.5px]"></div>

    <div class="mx-auto w-full max-w-(--breakpoint-sm) md:max-w-[1100px] flex flex-col items-center gap-8">
        <div class="flex h-full flex-col items-center justify-center gap-2">
            <h1 class="font-lora text-pretty scroll-mt-24 h0 text-orange-400 dark:text-blue-300 font-normal text-center !text-balance">Unlock the Future of Identity</h1>
            <p class="tracking-tight text-center max-w-lg text-pretty">A blazing-fast IAM, <span class="whitespace-nowrap">powered by Rust</span>. Open, secure, ready for your cloud journey.</p>
        </div>
        <div class="flex h-full w-full flex-col items-center justify-center gap-3">
            <div class="flex w-full flex-col items-center justify-center gap-2 sm:flex-row">
                <a
                    class="group select-none text-sm tracking-tight rounded-sm flex gap-1.5 items-center justify-center text-nowrap border transition-colors duration-75 fv-style disabled:opacity-50 disabled:cursor-not-allowed bg-orange-500 border-transparent text-white [box-shadow:hsl(25,_85%,_35%)_0_-2px_0_0_inset,_hsl(35,_90%,_85%)_0_1px_3px_0] dark:[box-shadow:hsl(25,_85%,_35%)_0_-2px_0_0_inset,_hsl(0,_0%,_0%,_0.4)_0_1px_3px_0] hover:bg-orange-600 active:[box-shadow:none] hover:[box-shadow:none] dark:hover:[box-shadow:none] h-9 pl-2.5 pr-3 data-kbd:pr-1.5 w-full sm:w-fit"
                    data-kbd="D"
                    aria-label="Documentation"
                    href="/docs/welcome/introduction"
                     id="docs-btn"
                >
                    <BookText class='w-4' />
                    Documentation<kbd aria-hidden="true" class="h-5 max-w-max rounded-xs px-1.5 flex items-center gap-0.5 text-[.6875rem] font-bold text-gray-500 dark:text-gray-300 dark:border-offgray-400/10 border border-gray-500/20 dark:bg-cream-900/10 bg-gray-50/50 hidden leading-normal sm:flex !border-white/20 !bg-white/10 !text-white">D</kbd>
                </a>
                <a
                    class="group select-none text-sm tracking-tight rounded-sm flex gap-1.5 items-center justify-center text-nowrap border transition-colors duration-75 fv-style disabled:opacity-50 disabled:cursor-not-allowed text-black dark:text-offgray-50 border-offgray-200/50 dark:border-offgray-400/20 bg-offgray-50/60 dark:bg-offgray-300/5 hover:bg-offgray-100/50 dark:hover:bg-offgray-200/10 [box-shadow:hsl(218,_13%,_50%,_0.1)_0_-2px_0_0_inset] dark:[box-shadow:hsl(218,_13%,_70%,_0.08)_0_-2px_0_0_inset] hover:[box-shadow:none] dark:hover:[box-shadow:none] h-9 pl-2.5 pr-3 data-kbd:pr-1.5 w-full sm:w-fit sm:shrink-0"
                    data-kbd="C" aria-label="Clone source"
                      id="github-btn"
                    target="_blank" href="https://github.com/ferriskey/ferriskey"
                >
                    <!-- <svg class="github_svg__lucide github_svg__lucide-github" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.4 5.4 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65S8.93 17.38 9 18v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg> -->
                    <Github class="w-4" />
                    Clone source<kbd aria-hidden="true" class="h-5 max-w-max rounded-xs px-1.5 flex items-center gap-0.5 text-[.6875rem] font-bold text-gray-500 dark:text-gray-300 dark:border-offgray-400/10 border border-gray-500/20 dark:bg-cream-900/10 bg-gray-50/50 hidden leading-normal sm:flex">C</kbd>
                </a>
            </div>
            <p class="flex flex-wrap items-center justify-center gap-2 text-center text-[.8125rem]"><svg width="12" viewBox="0 0 24 24" fill="currentcolor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" height="12" class="hidden h-full pb-[3px] sm:inline-block"><span>Built for developers, ready for productionâ€”wherever you need IAM</span></p></div>
    </div>
    <svg aria-hidden="true" class="pointer-events-none absolute inset-0 [z-index:-1] size-full fill-orange-500/50 stroke-orange-500/50 [mask-image:linear-gradient(to_top,_#ffffffad,_transparent)] opacity-[.30]" style="visibility: visible;">
        <defs>
            <pattern id=":R1oafknq6ja:" width="20" height="20" patternUnits="userSpaceOnUse" x="-1" y="-1"><path d="M.5 20V.5H20" fill="none" stroke-dasharray="0"></path></pattern>
        </defs>
        <rect width="100%" height="100%" stroke-width="0" fill="url(#:R1oafknq6ja:)"></rect>
    </svg>
</section>


<script>

function handleHeroKeyKeyPress(event) {
  const activeElement = document.activeElement
  const isInputActive = activeElement && (
        activeElement.tagName === 'INPUT' ||
        activeElement.tagName === 'TEXTAREA'
  )

  if (isInputActive) return

  if (event.key === 'c' || event.key === 'C') {
             // Cliquer sur le bouton GitHub
             const githubBtn = document.getElementById('github-btn');
             if (githubBtn) {
                 window.open(githubBtn.href, '_blank');
             }
         } else if (event.key === 'd' || event.key === 'D') {
             // Naviguer vers la documentation
             const docsBtn = document.getElementById('docs-btn');
             if (docsBtn) {
                 window.location.href = docsBtn.href;
             }
         }

}

document.addEventListener('keydown', handleHeroKeyKeyPress)
</script>
