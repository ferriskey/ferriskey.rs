---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
}

const {
  title = 'FerrisKey â€” Modern Open-Source IAM in Rust',
  description = 'FerrisKey is a modern, high-performance Identity and Access Management (IAM) solution built in Rust. Open-source, cloud-native, and designed for scalability.',
  ogImage = '/banner.png',
  noIndex = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle = title.includes('FerrisKey') ? title : `${title} | FerrisKey`;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/ferriskey.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#020408" />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Additional meta tags -->
    <meta name="keywords" content="IAM, Identity Access Management, Rust, OpenID Connect, OAuth 2.0, Authentication, Authorization, Open Source, Cloud Native" />
    <meta name="author" content="FerrisKey" />
  </head>

  <body class="min-h-screen flex flex-col">
    <!-- Deep dark gradient background -->
    <div class="fixed inset-0 z-0" style="background: radial-gradient(ellipse at top, #0a0f1e 0%, #020408 50%, #000000 100%);"></div>

    <!-- Animated gradient orbs -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
      <!-- Large ferris glow - top right -->
      <div class="absolute -top-96 -right-96 w-[800px] h-[800px] bg-gradient-to-br from-ferris-500/20 via-ferris-600/10 to-transparent rounded-full blur-3xl animate-pulse-slow"></div>

      <!-- Ocean glow - left center -->
      <div class="absolute top-1/3 -left-80 w-[600px] h-[600px] bg-gradient-to-br from-ocean-500/15 via-ocean-600/8 to-transparent rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 1s;"></div>

      <!-- Rust glow - bottom -->
      <div class="absolute -bottom-80 right-1/4 w-[700px] h-[700px] bg-gradient-to-br from-rust-500/15 via-rust-600/8 to-transparent rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>

      <!-- Additional accent glow - top left -->
      <div class="absolute -top-60 -left-60 w-[500px] h-[500px] bg-gradient-to-br from-ferris-400/10 to-transparent rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 3s;"></div>
    </div>

    <!-- Subtle grid pattern overlay -->
    <div class="fixed inset-0 z-0 opacity-30" style="background-image: radial-gradient(circle at 1px 1px, rgba(237, 116, 26, 0.05) 1px, transparent 0); background-size: 40px 40px;"></div>

    <!-- Vignette effect -->
    <div class="fixed inset-0 z-0 pointer-events-none" style="background: radial-gradient(ellipse at center, transparent 0%, rgba(0, 0, 0, 0.4) 100%);"></div>

    <!-- Main content wrapper -->
    <div class="relative z-10 flex flex-col min-h-screen">
      <Navigation />

      <main class="flex-1 pt-20">
        <slot />
      </main>

      <Footer />
    </div>

    <!-- Scripts -->
    <script>
      // Dark mode toggle functionality
      function initTheme() {
        const theme = localStorage.getItem('theme') || 'dark';
        document.documentElement.classList.toggle('dark', theme === 'dark');
      }

      // Initialize theme on page load
      initTheme();

      // Listen for view transitions
      document.addEventListener('astro:page-load', initTheme);
    </script>
  </body>
</html>
